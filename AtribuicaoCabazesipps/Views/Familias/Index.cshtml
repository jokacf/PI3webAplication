@model IEnumerable<AtribuicaoCabazesipps.Models.Familia>

<h2>Familias</h2>
@Html.ActionLink("Registar nova familia", "Create")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeResponsavel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TelefoneResponsavel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NIFResponsavel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BIResponsavel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroMembros)
        </th>
@if (User.IsInRole("Admin"))
{
        <th>
            @Html.DisplayNameFor(model => model.Instituicao.Nome)
        </th>
}
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="Beneficiarios/ByFamilia/@Html.DisplayFor(modelItem => item.Id)">@Html.DisplayFor(modelItem => item.Nome) </a> 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeResponsavel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TelefoneResponsavel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NIFResponsavel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BIResponsavel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroMembros)
        </td>
@if (User.IsInRole("Admin"))
{
        <td>
            @Html.DisplayFor(modelItem => item.Instituicao.Nome)
        </td>
}
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
